" key mappings
" line down/up with ctrl j/k - Alt doesn't work in terminal
nnoremap <C-k> :m .-2<CR>
nnoremap <C-j> :m .+1<CR>
inoremap <C-k> <Esc>:m .-2<CR>
inoremap <C-j> <Esc>:m .+1<CR>
vnoremap <C-k> :m '<-2<CR>
vnoremap <C-j> :m '>+1<CR>
" more mappings

"autocmd FileType sh let g:sh_fold_enabled=5

" Wans't able to send the file name to system call. Also after updating the
" buffer, the original file on the disk is still unchaned.
" Also, the completion menu still insert the output into the buffer, so
" noselect, noinsert still didn't help
function! Venkat(a,b)
   ":set noshowmode
   :set completeopt+=menuone,noinsert,noselect,preview
   let javaout=system('javac -cp . "/tmp/Test.java"; java Test')
   call complete(col('.*'), [javaout])
   :set updatetime=500
   
endfunction

:inoremap <C-r> :call Venkat()<CR>
set omnifunc=Venkat
set completefunc=Venkat
" Fixes garbage issue in neovim
set guicursor=

" add yaml stuffs
au! BufNewFile,BufReadPost *.{yaml,yml} set filetype=yaml
autocmd FileType yaml setlocal ts=2 sts=2 sw=2 expandtab

" markdown
au BufNewFile,BufReadPost *.md setlocal textwidth=120

call plug#begin('~/.vim/neovim-plugins')
Plug 'aserebryakov/vim-todo-lists'
